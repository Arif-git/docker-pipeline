pipeline {
    agent {
        label 'Lable1'
    }
    parameters {
        choice(name: 'action', choices: 'Build\nRun', description: 'Build/Run the docker images')
        string(name: 'container', defaultValue : 'container1', description: "Name of the container")
    }
    stages {
        stage('build') {
            steps {
                git 'https://github.com/Arif-git/docker-pipeline.git'
            }
        }
        stage('TF Plan') {
            when {
                expression { params.action == 'create' }
            }
            steps {
                script {
                    dir('terraform_apacheSrever') {
                        sh """
                        terraform init
                        terraform workspace new ${params.workspace} || true
                        terraform workspace select ${params.workspace}
                        terraform plan 
                        """
                        }
                    }
                }
        }
        stage('TF Apply') {
          when {
            expression { params.action == 'create' }
          }
          steps {
            script {
                    dir('terraform_apacheSrever') {
                        sh """ 
                        terraform apply -input=false -auto-approve
                        """
                        }
                    }
                }
        }
        stage('TF Destroy') {
          when {
            expression { params.action == 'destroy' }
          }
          steps {
            script {
                    dir('terraform_apacheSrever') {
                        sh """ 
                        terraform workspace select ${params.workspace}
                        terraform destroy -auto-approve
                        """
                        }
                    }
                }
        }
    }        
}
